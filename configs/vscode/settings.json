{
    "editor.fontFamily": "'Fira Code'",
    // vim extension keybinding
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                "undo"
            ]
        },
        {
            "before": [
                "C-r"
            ],
            "after": [],
            "commands": [
                "redo"
            ]
        },
        {
            "before": [
                "g",
                "d"
            ],
            "commands": [
                "extension.goto-symbol-stack.goToSymbolDeclaration"
            ]
        },
        {
            "before": [
                "g",
                "shift+d"
            ],
            "commands": [
                "editor.action.goToReferences"
            ],
            "when": "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor"
        },
    ],
    "vim.handleKeys": {
        "g d": false,
    },
    "settingsSync.keybindingsPerPlatform": false,
    "python.envFile": "${workspaceFolder}/.env",
    "python.formatting.provider": "none",
    "black-formatter.args": [
        "--line-length",
        "100"
    ],
    "eslint.enable": true,
    "eslint.validate": ["javascript", "javascriptreact"],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format",
        "editor.formatOnSave": true
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "cmake.configureOnOpen": true,
    "window.zoomLevel": 1,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "metals.mavenScript": "/home/jwhur/spark/build/mvn",
    "settingsSync.ignoredSettings": [
        "metals.mavenScript"
    ],
    "metals.javaHome": "/usr/lib/jvm/java-8-openjdk-amd64",
    "metals.sbtScript": "/home/jwhur/spark/build/sbt",
    // "emeraldwalk.runonsave": {
    //     "commands": [
    //         {
    //             "match": "\\.tex$",
    //             "cmd": "make"
    //         }
    //     ]
    // },
    "editor.inlineSuggest.enabled": true,
    "rewrap.wrappingColumn": 60,
    "python.defaultInterpreterPath": "/usr/bin/python3",
    "javascript.format.semicolons": "insert",
}